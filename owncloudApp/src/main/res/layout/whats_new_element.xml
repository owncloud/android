<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="@dimen/whats_new_text_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/whatsNewImage"
            android:layout_width="@dimen/whats_new_image_size"
            android:layout_height="@dimen/whats_new_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="36dp"
            android:gravity="start" />

        <TextView
            android:id="@+id/whatsNewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:text="@string/welcome_feature_6_title" />

        <TextView
            android:id="@+id/whatsNewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/standard_margin"
            android:gravity="start"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            tools:text="@string/welcome_feature_6_text" />

        <ImageView
            android:id="@+id/whatsNewExtraImage"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>